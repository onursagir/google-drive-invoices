{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": ["plugin:@typescript-eslint/recommended", "airbnb"],
  "rules": {
    "camelcase": 0,
    "@typescript-eslint/camelcase": 0,
    "max-len": [1, {
      "code": 150,
      "ignoreComments": true
    }],
    "import/no-extraneous-dependencies": 0,
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}